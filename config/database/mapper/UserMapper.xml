<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="main.ouch.core.dao.UserDao">

    <select id="queryAll" resultType="User">
        SELECT
            user_id,
            username,
            email,
            role,
            admin_role,
            reg_time
        FROM
            user
    </select>

    <select id="queryByUsername" resultType="User">
        SELECT
            user_id,
            username,
            email,
            role,
            admin_role,
            reg_time
        FROM
            user
        WHERE
            username = #{username}
    </select>

    <select id="queryByEmail" resultType="User">
        SELECT
            user_id,
            username,
            email,
            role,
            admin_role,
            reg_time
        FROM
            user
        WHERE
            email = #{email}
    </select>

    <select id="queryByLoginInfo"  resultType="User">
        SELECT
            user_id,
            username,
            email,
            role,
            admin_role,
            reg_time
        FROM
            user
        WHERE
            username = #{0}
            AND
            password = #{1}
    </select>

    <insert id="addUser" parameterType="User">
        insert into user(user_id,username,email,password,role,admin_role,reg_time)
        values(#{userId},#{username},#{email},#{password},#{role},#{adminRole},#{regTime})
    </insert>

</mapper>